{
  "name": "maintenance-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:api": "cd packages/api && ./run.sh",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:mobile": "turbo run dev --filter=@maintenance/mobile",
    "dev:ml": "cd packages/ml-service && python -m src.main",
    "dev:gateway": "turbo run dev --filter=@maintenance/api-gateway",
    "dev:docs": "cd packages/document-processing && python -m src.main",
    "dev:security": "turbo run dev --filter=@maintenance/security",
    "dev:full": "concurrently \"npm run dev:api\" \"npm run dev:frontend\" \"npm run dev:gateway\" \"npm run dev:ml\" \"npm run dev:docs\"",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=frontend",
    "build:api": "turbo run build --filter=api",
    "build:mobile": "turbo run build --filter=@maintenance/mobile",
    "build:gateway": "turbo run build --filter=@maintenance/api-gateway",
    "build:security": "turbo run build --filter=@maintenance/security",
    "test": "turbo run test",
    "test:frontend": "cd packages/frontend && npx vitest run",
    "test:api": "cd packages/api && python -m pytest",
    "test:mobile": "cd packages/mobile && npm test",
    "test:gateway": "cd packages/api-gateway && npm test",
    "test:ml": "cd packages/ml-service && python -m pytest",
    "test:docs": "cd packages/document-processing && python -m pytest",
    "test:security": "cd packages/security && npm test",
    "lint": "turbo run lint --continue",
    "lint:fix": "turbo run lint:fix --continue",
    "clean": "turbo run clean",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "maintenance": "./scripts/maintenance.sh",
    "maintenance:setup": "./scripts/maintenance.sh --setup",
    "maintenance:fix-deps": "./scripts/maintenance.sh --fix-deps",
    "maintenance:fix-db": "./scripts/maintenance.sh --fix-db",
    "maintenance:fix-port": "./scripts/maintenance.sh --fix-port",
    "maintenance:fix-all": "./scripts/maintenance.sh --fix-all",
    "security:scan": "cd packages/security && npm run scan",
    "security:audit": "cd packages/security && npm run audit",
    "security:report": "cd packages/security && npm run report",
    "security:fix": "./scripts/security-fix-advanced.sh",
    "security:fix:all": "./scripts/apply-security-patches.sh && ./scripts/additional-patches.sh",
    "security:fix:essential": "./scripts/apply-security-patches.sh",
    "security:fix:additional": "./scripts/additional-patches.sh",
    "security:verify": "npm audit && echo '⚠️ 일부 취약점은 코드 레벨에서 패치되었지만 npm audit에서는 계속 보고됩니다. 자세한 내용은 .security-patches/REMAINING_VULNERABILITIES.md를 참조하세요.'",
    "security:test": "./scripts/run_security_tests_enhanced.sh",
    "security:full": "npm run security:fix:all && npm run security:test",
    "security:sensitive-info": "./scripts/security-scan.sh",
    "security:docker": "./scripts/docker-security-scan.sh",
    "security:complete": "npm run security:sensitive-info && npm run security:fix:all && npm run security:docker && npm run security:test",
    "docker:setup": "./scripts/maintenance.sh --docker-setup",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:test": "docker compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker:prod": "docker compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:troubleshoot": "./scripts/maintenance.sh --docker-setup",
    "docker:restart": "docker compose restart",
    "docker:rebuild": "docker compose build --no-cache && docker compose up -d",
    "docker:security": "./scripts/docker-security-scan.sh",
    "docker:secure-build": "npm run docker:security && npm run docker:rebuild",
    "prepare": "husky install",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prebuild": "./scripts/security-fix-advanced.sh",
    "deps:check": "npm outdated",
    "deps:update": "./scripts/auto-dependency-update.sh",
    "deps:audit": "npm audit --omit=dev",
    "quality:sonar": "./scripts/run-sonarqube.sh",
    "quality:lint": "turbo run lint --continue",
    "quality:full": "npm run quality:lint && npm run quality:sonar",
    "backup": "./scripts/project-backup.sh",
    "backup:db": "./scripts/project-backup.sh --db-only",
    "backup:config": "./scripts/project-backup.sh --config-only",
    "backup:incremental": "./scripts/project-backup.sh --incremental",
    "backup:list": "./scripts/project-backup.sh --list",
    "restore": "./scripts/project-backup.sh --restore"
  },
  "mcpServers": {
    "convex": {
      "command": "npx",
      "args": [
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ]
    },
    "MCP_DOCKER": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "alpine/socat",
        "STDIO",
        "TCP:host.docker.internal:8811"
      ]
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/file-saver": "^2.0.7",
    "@types/google.maps": "^3.54.10",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^19.0.0",
    "@types/recharts": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "axe-core": "^4.10.3",
    "concurrently": "^9.1.2",
    "cookie": "0.7.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.29.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "lint-staged": "^15.5.1",
    "mini-css-extract-plugin": "^2.9.2",
    "nth-check": "2.1.1",
    "postcss": "8.4.31",
    "prettier": "^3.5.3",
    "semver": "^7.7.1",
    "send": "^0.19.1",
    "shell-quote": "^1.8.2",
    "terser-webpack-plugin": "^5.3.14",
    "turbo": "^2.5.0",
    "typescript": "^5.4.2",
    "vite": "^6.3.2",
    "webpack": "^5.99.6",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@mui/icons-material": "^7.0.2",
    "@mui/material": "^7.0.2",
    "@prisma/client": "^6.6.0",
    "ajv": "^8.17.1",
    "ajv-keywords": "^5.1.0",
    "cookie-parser": "^1.4.7",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.10",
    "exceljs": "^4.4.0",
    "express-session": "1.18.1",
    "file-saver": "^2.0.5",
    "framer-motion": "^12.7.4",
    "idb": "^8.0.2",
    "joi": "^17.13.3",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "jwt-decode": "^4.0.0",
    "python-shell": "^5.0.0",
    "react": "^19.1.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.5.1",
    "recharts": "^2.15.3",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.17",
    "zod": "^3.24.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "xlsx": false,
    "nth-check": "2.1.1",
    "postcss": "8.4.31",
    "loader-utils": "2.0.4"
  }
}
