# API 설정
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ENVIRONMENT=production

# 데이터베이스 설정
DATABASE_URL=${DATABASE_CONNECTION_STRING}
DB_HOST=db
DB_PORT=5432
DB_USER=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=maintenance
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_MAX_CONNECTIONS=30

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_SSL=true

# 보안 설정
SECRET_KEY=${SECRET_KEY}
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
SERVICE_NAME="Maintenance API"
MIN_PASSWORD_LENGTH=12
MAX_PASSWORD_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true
PASSWORD_MAX_CONSECUTIVE_CHARS=2
PASSWORD_PREVIOUS_PASSWORDS_COUNT=5
PASSWORD_PREVENT_COMMON_PASSWORDS=true

# CORS 설정
CORS_ORIGINS=https://app.example.com,https://admin.example.com
ALLOWED_HOSTS=api.example.com,api-backend.example.com

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/maintenance.log

# 이메일 설정
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=${SMTP_HOST}
SMTP_USER=${SMTP_USERNAME}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAILS_FROM_EMAIL=noreply@example.com
EMAILS_FROM_NAME="Maintenance API"

# 2FA 설정
ENABLE_2FA=true
2FA_ISSUER="Maintenance App"
BACKUP_CODES_COUNT=8

# 애플리케이션 설정
APP_NAME="Maintenance API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Maintenance API 서비스"

# 캐시 설정
CACHE_ENABLED=true
CACHE_BACKEND=redis
CACHE_DEFAULT_TTL=3600
CACHE_COMPRESSION_ENABLED=true
CACHE_COMPRESSION_THRESHOLD=1024 