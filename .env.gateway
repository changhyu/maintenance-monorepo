# API 게이트웨이 기본 설정
NODE_ENV=development
PORT=4000
DEBUG=true

# 서비스 URL 설정
API_SERVICE_URL=http://api:8000
ML_SERVICE_URL=http://ml-service:8001
MOBILE_API_URL=http://mobile-api:8002
AUTH_SERVICE_URL=http://api:8000/auth
DOCUMENT_SERVICE_URL=http://document-service:8004

# 보안 설정
JWT_SECRET=your_secret_key_here_change_in_production
CORS_ORIGIN=http://localhost:3000,http://frontend:80

# 로깅 설정
LOG_LEVEL=debug

# 캐싱 설정
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# 속도 제한 설정
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100