# 프로젝트 기본 환경 변수 설정
# 이 파일을 .env로 복사하여 사용하세요

# 애플리케이션 설정
ENVIRONMENT=development
DEBUG=True
LOG_LEVEL=DEBUG
TZ=Asia/Seoul

# API 서비스 설정
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_DOMAIN=localhost
API_URL=http://localhost:8000

# 프론트엔드 설정
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000

# 데이터베이스 설정
DB_ENGINE=postgresql
DB_HOST=db
DB_PORT=5432
DB_NAME=maintenance_dev
DB_USER=postgres
DB_PASSWORD=development
DB_SCHEMA=public

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 보안 설정
SECRET_KEY=your-secret-key-for-development-only
JWT_SECRET_KEY=your-jwt-secret-key-for-development
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# API 게이트웨이 설정
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=4000
GATEWAY_API_KEY=dev-gateway-api-key
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# ML 서비스 설정
ML_HOST=0.0.0.0
ML_PORT=8001
ML_MODEL_PATH=/app/models
MODEL_VERSION=latest

# 캐시 모니터링 설정
CACHE_MONITOR_HOST=0.0.0.0
CACHE_MONITOR_PORT=5000
REPO_PATH=/app/gitmanager
CACHE_DATA_PATH=/app/.gitmanager

# 모바일 API 설정
MOBILE_API_HOST=0.0.0.0
MOBILE_API_PORT=8002
MOBILE_FCM_KEY=your-fcm-key-for-development

# 문서 서비스 설정
DOCUMENT_HOST=0.0.0.0
DOCUMENT_PORT=8004
STORAGE_PATH=/app/storage

# 이메일 설정
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=test@example.com
MAIL_PASSWORD=test-password
MAIL_FROM=noreply@example.com
MAIL_USE_TLS=True
MAIL_USE_SSL=False