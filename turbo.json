{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.json", ".env.local", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "security:check"],
      "outputs": ["dist/**", ".next/**", "build/**", "lib/**", "out/**"],
      "cache": true
    },
    "@maintenance/api#build": {
      "outputs": [],
      "cache": false
    },
    "@maintenance/document-processing#build": {
      "outputs": [],
      "cache": false
    },
    "@maintenance/ml-service#build": {
      "outputs": [],
      "cache": false
    },
    "@maintenance/mobile#build": {
      "outputs": [],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "security:check": {
      "cache": false,
      "outputs": ["security_test_results.log"]
    },
    "security:fix": {
      "cache": false
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL",
    "PORT",
    "DEBUG",
    "JWT_SECRET",
    "API_SERVICE_URL",
    "ML_SERVICE_URL",
    "MOBILE_API_URL",
    "DOCUMENT_SERVICE_URL",
    "REDIS_HOST",
    "REDIS_PORT",
    "SESSION_SECRET"
  ]
}